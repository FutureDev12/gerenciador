import PySimpleGUI as sg      #gerenciador de tarefas para produção de tapetes#


def criar_janela_inicial():
    sg.theme('DarkRed1')
    linha = [
        [sg.Text('Insira as informações do tapete')],
        [sg.Checkbox(''), sg.Input('')]
    ]
    layout = [
        [sg.Frame('Tapetes', layout=linha, key='container')],
        [sg.Button('Novo Tapete'), sg.Button('Resetar')]
    ]

    return sg.Window('CONTROLE TAPETES TRABALHADOS', layout=layout, finalize=True)


janela = criar_janela_inicial()
while True:
    event, values = janela.read()
    if event == sg.WIN_CLOSED:
        print('Programa Enecerrado!')
        break
    elif event == 'Novo Tapete':
        janela.extend_layout(janela['container'], [[sg.Checkbox(''), sg.Input('')]])
    elif event == 'Resetar':
        janela.close()
        janela = criar_janela_inicial()
